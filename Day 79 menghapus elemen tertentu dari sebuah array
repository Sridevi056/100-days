package day79; 
public class day79 {
    public static void main(String[] args) {
        int[] array = {1, 2, 3, 4, 5, 6, 7, 8};
        int removeIndex = 3;
        for (int i = removeIndex; i < array.length - 1; i++) {
            array[i] = array[i + 1];
        }
        System.out.println("Array setelah menghapus elemen: " + java.util.Arrays.toString(array));
    }
}
